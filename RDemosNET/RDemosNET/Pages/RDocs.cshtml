@page
@model RDemosNET.RDocsModel
@{

    ViewData["Title"] = "R:Docs | Demostración";
}


<div id="main" class="wrapper style1">
    <div class="container">


        <!-- Main -->
        <header class="major">
            <h2>Demostración de R:Docs</h2>
            <p>Tecnología Cognitiva Avanzada para Entendimiento de Contenido Documental</p>
        </header>
        <div class="row 150%">
            <div class="4u 12u$(medium)">

                <!-- Sidebar -->
                <section id="sidebar">
                    <section>
                        <h3>Documento único</h3>
                        <form enctype="multipart/form-data" method="post">
                            <dl>
                                <dd>
                                    <input type="file" asp-for="FileForUpload" />
                                </dd>
                            </dl>
                            <input asp-page-handler="Upload" class="button alternative" type="submit" value="Interpretar documento" />
                        </form>
                    </section>
                </section>

            </div>
            <div class="8u$ 12u$(medium) important(medium)">

                <!-- Content -->
                <section id="content">
                    <h3>Análisis de Documento</h3>
                    <p>@Html.Raw(@Model.DocumentDescription)</p>
                </section>
            </div>
        </div>
    </div>
</div>
